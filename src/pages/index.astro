---
import Layout from '../layouts/Layout.astro'
import { Picture } from '@astrojs/image/components'
import Hero from '../components/Hero.astro'
import Estates from '../components/Estates.astro'
import { getEstates } from '../services/GetEstates.js'
const forSale = await getEstates('for-Sale')
const forRent = await getEstates('for-Rent')
const RentInfo = {
	title: 'Rental Homes for Everyone',
	subTitle: 'RENT A HOME',
	desc: 'Explore from Apartments, builder floors, villas and more',
	image:
		'https://bayut-production.s3.eu-central-1.amazonaws.com/image/145426814/33973352624c48628e41f2ec460faba4',
	btn: 'Explore Renting'
}
const SaleInfo = {
	title: 'Find, Buy & Own Your Dream Home',
	subTitle: 'BUY A HOME',
	desc: 'Explore from Apartments, land, builder floors,villas and mor',
	image:
		'https://bayut-production.s3.eu-central-1.amazonaws.com/image/110993385/6a070e8e1bae4f7d8c1429bc303d2008',
	btn: 'Explore Buying'
}
---

<Layout title='UAE eSTATE'>
	<main>
		<Hero
			title={RentInfo.title}
			subTitle={RentInfo.subTitle}
			desc={RentInfo.desc}
			image={RentInfo.image}
			btn={RentInfo.btn}
		/>
		<Estates data={forRent} />
		<Hero
			title={SaleInfo.title}
			subTitle={SaleInfo.subTitle}
			desc={SaleInfo.desc}
			image={SaleInfo.image}
			btn={SaleInfo.btn}
		/>
		<Estates data={forSale} />
	</main>
</Layout>

